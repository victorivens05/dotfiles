mode "monitors" {
	bindsym 2 exec "exec xrandr --output DP-0 --off --output DP-1 --off --output HDMI-0 --mode 1920x1080 --pos 1920x0 --rotate right --output DP-2 --mode 1920x1080 --pos 0x420 --rotate normal && ~/.config/polybar/forest/launch_multi_monitors.sh", mode "default"
	bindsym 3 exec "xrandr --output DP-0 --primary --mode 1920x1080 --pos 0x467 --rotate normal --output DP-1 --off --output HDMI-0 --mode 1920x1080 --pos 1920x0 --rotate right --output DP-2 --mode 1920x1080 --pos 3000x1547 --rotate normal && ~/.config/polybar/forest/launch_3_monitors.sh", mode "default"

        bindsym Escape mode "default"
}


