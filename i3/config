# music player mode
bindsym $mod+z mode "$music_player"
set $music_player ()play/pause, ()previous, ()next
mode "$music_player" {
        bindsym $left exec --no-startup-id "playerctl previous"
        bindsym Left exec --no-startup-id "playerctl previous"
        bindsym a exec --no-startup-id "playerctl previous"
        bindsym $mod+a exec --no-startup-id "playerctl previous"
        bindsym $mod+$left exec --no-startup-id "playerctl previous"
        bindsym Left exec --no-startup-id "playerctl previous"
        bindsym $right exec --no-startup-id "playerctl next"
        bindsym $mod+d exec --no-startup-id "playerctl next"
        bindsym $mod+$right exec --no-startup-id "playerctl next"
        bindsym Right exec --no-startup-id "playerctl next"
        bindsym space exec --no-startup-id "playerctl play-pause", mode "default"
        bindsym Return exec --no-startup-id "playerctl play-pause", mode "default"

        # exit system mode: "Enter" or "Escape"
        bindsym Escape mode "default"
}

# #helper mode
bindsym $mod+Ctrl+Shift+h mode "$helpers"
set $helpers (1)cpf, (2)cnpj, (3)ip, (4) uuid, (9)wallpaper
mode "$helpers" {
        bindsym 1 exec "~/Projetos/personal_projects/Helpers/cpf.sh | xclip -r -selection clipboard", exec notify-send "cpf", mode "default"
        bindsym 2 exec "node ~/Projetos/personal_projects/Helpers/teste.js | xclip -selection clipboard", exec notify-send "cnpj", mode "default"
        bindsym 7 exec "~/Projetos/personal_projects/Helpers/wallpaper", notify-send "teste", mode "default"
	bindsym 4 exec "uuidgen | xclip -r -selection clipboard", exec notify-send "uuid copiado", mode "default"
        bindsym 3 exec --no-startup-id "curl ifconfig.me | xclip -r -selection clipboard", exec notify-send "ip copiado", mode "default"
        bindsym 9 exec --no-startup-id wallpaper, mode "default"

        # exit system mode: "Enter" or "Escape"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

